<Window x:Class="CoMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:CoMaster.ViewModels"
        xmlns:cvs="clr-namespace:CoMaster.Converters"
        xmlns:local="clr-namespace:CoMaster"
        mc:Ignorable="d"
        Title="MainWindow" Width="600" Height="520">
    <Window.Resources>
        <cvs:ProtocolConverter x:Key="ProtocolConverter"/>
    </Window.Resources>
    <Grid Style="{StaticResource MainGrid}">
        <TabControl>
            <TabItem Header="Interfaces">
                <Frame Source="Pages/InterfacesPage.xaml"/>
            </TabItem>
            <TabItem Header="Send Packets">
                <Frame Source="Pages/PacketSenderPage.xaml"/>
            </TabItem>
            <TabItem Header="Send Ping">
                <Frame Source="Pages/PingPage.xaml"/>
            </TabItem>
            <TabItem Header="Log">
                <Grid>
                    <DataGrid Name="liLog" GridLinesVisibility="Horizontal" IsReadOnly="True" SelectionMode="Single" ></DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
